@model CinemaArchiveProje.Models.Director

@{
    ViewData["Title"] = "Yeni Yönetmen Ekle";
    Layout = "_AdminLayout";
}

<style>
    .create-director-container {
        max-width: 700px;
        margin: 50px auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', sans-serif;
    }

    h1 {
        color: #004080;
        text-align: center;
        margin-bottom: 20px;
    }

    h4 {
        text-align: center;
        color: #444;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
            color: #333;
        }

        .form-group input, .form-group textarea {
            margin-top: 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
            padding: 10px;
            width: 100%;
        }

            .form-group input:focus, .form-group textarea:focus {
                border-color: #800000;
                outline: none;
            }

    .btn-primary, .btn-secondary {
        min-width: 100px;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        gap: 10px;
    }

    .back-link {
        margin-top: 20px;
        text-align: center;
    }
</style>

<div class="create-director-container">
    <h1>@ViewData["Title"]</h1>

    <h4>Yönetmen Bilgilerini Girin</h4>
    <hr />

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Yönetmen Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Biography" class="control-label">Biyografi</label>
            <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Biography" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
        </div>
    </form>

    <div class="back-link">
        <a href="@Url.Action("Index")">← Yönetmenler Listesine Geri Dön</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
