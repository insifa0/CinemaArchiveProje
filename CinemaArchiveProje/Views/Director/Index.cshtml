@model IEnumerable<CinemaArchiveProje.Models.Director>

@{
    ViewData["Title"] = "Yönetmenler";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">@ViewData["Title"]</h1>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Yönetmen Ekle</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Biography)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var director in Model)
        {
            <tr>
                <td>@director.Name</td>
                <td>@director.Biography</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = director.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = director.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

