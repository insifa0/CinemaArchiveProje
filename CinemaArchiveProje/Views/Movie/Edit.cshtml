@model CinemaArchiveProje.Models.Movie

@{
    ViewData["Title"] = "Film Düzenle";
}

<h2>Film Düzenle</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate"></label>
        <input asp-for="ReleaseDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DirectorId">Yönetmen</label>
        <select asp-for="DirectorId" class="form-control" asp-items="ViewBag.Directors"></select>
    </div>

    <div class="form-group">
        <label asp-for="GenreId">Tür</label>
        <select asp-for="GenreId" class="form-control" asp-items="ViewBag.Genres"></select>
    </div>

    <div class="form-group">
        <label asp-for="CountryId">Ülke</label>
        <select asp-for="CountryId" asp-items="ViewBag.Countries" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Mevcut Poster</label><br />
        @if (!string.IsNullOrEmpty(Model.PosterUrl))
        {
            <img src="@Model.PosterUrl" alt="Poster" style="max-height: 150px;" />
        }
    </div>

    <div class="form-group">
        <label>Yeni Poster (isteğe bağlı)</label>
        <input type="file" name="posterFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
