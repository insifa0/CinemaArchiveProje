@model CinemaArchiveProje.Models.Movie

@{
    ViewData["Title"] = "Yeni Film Ekle";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Film Adı</label>
                    <input asp-for="Title" class="form-control" placeholder="Film adı girin..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Açıklama girin..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ReleaseDate" class="form-label">Yayın Tarihi</label>
                    <input asp-for="ReleaseDate" type="date" class="form-control" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="DirectorId" class="form-label">Yönetmen</label>
                        <select asp-for="DirectorId" class="form-select" asp-items="ViewBag.Directors"></select>
                        <span asp-validation-for="DirectorId" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="GenreId" class="form-label">Tür</label>
                        <select asp-for="GenreId" class="form-select" asp-items="ViewBag.Genres"></select>
                        <span asp-validation-for="GenreId" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="CountryId" class="form-label">Ülke</label>
                        <select asp-for="CountryId" class="form-select" asp-items="ViewBag.Countries"></select>
                        <span asp-validation-for="CountryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="TrailerUrl" class="form-label">YouTube Trailer Linki</label>
                    <input asp-for="TrailerUrl" class="form-control" placeholder="https://www.youtube.com/watch?v=..." />
                    <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label">Poster Yükle</label>
                    <input type="file" name="PosterFile" class="form-control" />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
