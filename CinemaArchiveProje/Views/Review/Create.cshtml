@model CinemaArchiveProje.Models.Review

@{
    ViewData["Title"] = "Yeni Yorum Ekle";
}

<h1>@ViewData["Title"]</h1>

<h4>Film: @ViewData["MovieTitle"]</h4>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="MovieId" />

    <div class="form-group">
        <label for="Content">Yorum</label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Rating">Puan</label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
