@model CinemaArchiveProje.Models.Actor

@{
    ViewData["Title"] = "Aktör Düzenle";
    Layout = "_AdminLayout";
}

<style>
    .edit-actor-container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', sans-serif;
    }

    h1 {
        color: #004080;
        text-align: center;
    }

    h4 {
        text-align: center;
        color: #555;
        margin-bottom: 30px;
    }

    .form-group label {
        font-weight: bold;
        color: #333;
    }

    .btn-primary {
        width: 100%;
    }

    .back-link {
        margin-top: 20px;
        text-align: center;
    }
</style>

<div class="edit-actor-container">
    <h1>@ViewData["Title"]</h1>
    <h4>Aktör Bilgilerini Düzenleyin</h4>
    <hr />

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Biography" class="control-label"></label>
            <textarea asp-for="Biography" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Biography" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>

    <div class="back-link">
        <a href="@Url.Action("Index")">← Geri Dön</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
