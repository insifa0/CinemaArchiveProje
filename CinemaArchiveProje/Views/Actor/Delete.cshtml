@model CinemaArchiveProje.Models.Actor

@{
    ViewData["Title"] = "Aktörü Sil";
}

<h1>@ViewData["Title"]</h1>

<h4>Aktörü silmek istediğinize emin misiniz?</h4>
<hr />

<div>
    <h4>@Model.Name</h4>
    <p>@Model.Biography</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

<div>
    <a href="@Url.Action("Index")">Geri Dön</a>
</div>




