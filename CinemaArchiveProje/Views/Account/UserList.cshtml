@model IEnumerable<CinemaArchiveProje.Models.ViewModels.UserWithRolesViewModel>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<h1>Kullanıcı Listesi</h1>
<a class="btn btn-success mb-3" href="@Url.Action("Create", "Account")">Yeni Kullanıcı Ekle</a>

@if (Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kullanıcı Adı</th>
                <th>Email</th>
                <th>Roller</th>
                <th>Date Joined</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@user.DateTime</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Account", new { id = user.Id })">Düzenle</a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Account", new { id = user.Id })"
                           onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Henüz kullanıcı bulunmamaktadır.</p>
}
