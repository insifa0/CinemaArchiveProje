@{
    ViewData["Title"] = "Giriş Yap";
}

<style>
    .login-container {
        max-width: 400px;
        margin: 80px auto;
        background-color: #1a1a1d;
        padding: 40px 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.6);
        font-family: 'Montserrat', sans-serif;
        color: #f1f1f1;
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 30px;
            font-family: 'Bebas Neue', cursive;
            font-size: 2.2rem;
            color: #00bcd4;
            letter-spacing: 1px;
        }

    .form-group label {
        font-weight: 500;
        margin-bottom: 5px;
        display: block;
        color: #ccc;
    }

    .form-control {
        background-color: #121212;
        border: 1px solid #333;
        color: #fff;
        border-radius: 8px;
        margin-bottom: 20px;
        padding: 10px 12px;
    }

        .form-control::placeholder {
            color: #888;
        }

    .btn-primary {
        width: 100%;
        background-color: #007acc;
        border: none;
        padding: 10px;
        font-weight: 600;
        letter-spacing: 1px;
        transition: background-color 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #005fa3;
        }

    .alert {
        margin-top: 20px;
        border-radius: 8px;
    }
</style>

<div class="login-container">
    <h2>Giriş Yap</h2>

    <form method="post" asp-action="Login">
        <div class="form-group">
            <label for="username">Kullanıcı Adı</label>
            <input name="username" id="username" class="form-control" placeholder="Kullanıcı adınızı girin" required />
        </div>

        <div class="form-group">
            <label for="password">Şifre</label>
            <input name="password" id="password" type="password" class="form-control" placeholder="Şifrenizi girin" required />
        </div>

        <button type="submit" class="btn btn-primary">Giriş Yap</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
</div>
